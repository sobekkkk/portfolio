---
import SocialIcon from './SocialIcon.astro';

interface Social {
    icon: 'github' | 'linkedIn' | 'email' | 'cv' | 'root-me';
    link: string;
    download: boolean;
    title?: string;
}

const socials: Social[] = [{
    icon: 'github',
    link: 'https://github.com/juststopp',
    title: 'Profile GitHub',
    download: false
}, {
    icon: 'linkedIn',
    link: 'https://www.linkedin.com/in/malo-beaugendre-a5aa4326a/',
    title: 'Profile LinkedIn',
    download: false
}, {
    icon: 'email',
    link: 'mailto:malo@beaugendre.org',
    title: 'Send Email',
    download: false
}, {
    icon: 'root-me',
    link: 'https://www.root-me.org/JustStop__-896700',
    title: 'Profile RootMe',
    download: false
}, {
    icon: 'cv',
    link: 'https://drive.google.com/file/d/14R1t84qZAzTsLDtb8VKUXlETwpPc4RFl/view?usp=share_link',
    title: 'Download CV',
    download: false
}];

---

<!-- Start: Social Links -->
<div class="flex flex-wrap gap-3 mt-6 justify-between">

    {socials.map(social =>
        { if (social.download) {
            return (
                <a
                    href={social.link}
                    title={social.title}
                    download
                    class="flex items-center justify-center w-10 h-10 rounded-lg bg-black text-gray-100 transition-all duration-150 border border-gray-600 hover:bg-primary hover:-translate-y-0.5"
                >
                    <SocialIcon icon={social.icon} />
                </a>
            );
        } else {
            return (
                <a
                    href={social.link}
                    target="_blank"
                    title={social.title}
                    rel="noopener noreferrer"
                    class="flex items-center justify-center w-10 h-10 rounded-lg bg-black text-gray-100 transition-all duration-150 border border-gray-600 hover:bg-primary hover:-translate-y-0.5">
                    <SocialIcon icon={social.icon} />
                </a>
            );
        }}
    )}

</div>
<!-- End: Social Links -->